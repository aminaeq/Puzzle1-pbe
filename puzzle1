require 'io/console'
class Rfid
        def read_uid
                data=STDIN.noecho(&:gets).chomp #elimina el eco i el salt de linea
                hex=data.to_i.to_s(16).upcase #guarda el valor en format hexadecimal i maj√∫scula
                little_hex=hex.scan(/../).reverse.join('')
                return little_hex
        end
end
if __FILE__==$0
        rf=Rfid.new
        uid=rf.read_uid
        puts uid
end

class Rfid
        def read_uid
                data=gets.chomp #guarda el valor sense salt de línea
                hex=data.to_i.to_s(16).upcase #guarda el valor en format hexadecimal i majúscula
                return hex
        end
end
if __FILE__==$0
        rf=Rfid.new
        uid=rf.read_uid
        puts uid
end
